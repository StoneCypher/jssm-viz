{
  "compilerOptions" : {
    "module"                         : "es2015",
    "moduleResolution"               : "node",
    "suppressImplicitAnyIndexErrors" : true,
    "noEmitOnError"                  : true,
    "removeComments"                 : true,
    "sourceMap"                      : true,
    "esModuleInterop"                : true,
    "target"                         : "ES2017",
    "lib"                            : [ "es2017", "dom" ],
    "outDir"                         : "./build/typescript/",
    "resolveJsonModule"              : true
  },
  "include" : [
    "src/ts/**/*"
  ],
  "exclude" : [
    "src/ts/tests/**/*"
  ],
}